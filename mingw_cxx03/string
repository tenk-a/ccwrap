#ifndef __CCWRAP_STRING_INCLUDED
#define __CCWRAP_STRING_INCLUDED

#include <cstddef>

#ifndef __CCWRAP_STD
 #define __CCWRAP_STD    std
#endif

#ifdef __CCWRAP_NATIVE_STL_HEADER_PATH
 #include __CCWRAP_NATIVE_STL_HEADER_PATH(string)
#elif defined(__CCWRAP_HAS_INCLUDE_NEXT)
 #include_next <string>
#else
 #include <../include/string>
#endif

#if defined(__cpp_char8_t) || defined(__CCWRAP_HAS_CHAR8_T)
namespace std {
 typedef basic_string<char8_t>  u8string;
}
#endif

#if (defined __CCWRAP_NO_CXX11_STRING) && !defined(__CCWRAP_BOOST2STD)
namespace std {
    typedef basic_string<char16_t>  u16string;
    typedef basic_string<char32_t>  u32string;
}
#include "../ccwrap/string_sub.hpp"
#endif  // __CCWRAP_NO_CXX11_STRING

#endif  // __CCWRAP_STRING_INCLUDED
